<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="org.iyb.mapper.ReplyMapper">
	<insert id="write">
		insert into reply(bno,reply,replyer)
		values(#{bno},#{reply},#{replyer})
	</insert>
	<!-- select는 resulType이 있지만  insesrt는 0,1로 값이 이동한다. -->
	
	<select id="list" resultType="org.iyb.domain.ReplyDTO">
	<!-- resultType="값을 보내고 받을 페키지+클래스경로" -->
		select*from reply where bno=#{bno}
	</select>
	<select id="detail" resultType="org.iyb.domain.ReplyDTO">
		select*from reply where rno=#{rno}
	</select>
	<update id="update">
		update reply 
		set reply=#{reply}, replydate=now() 
		where rno=#{rno}
	</update>
	<delete id="remove">
		delete from reply
		where rno=#{rno}
	</delete>
</mapper>
